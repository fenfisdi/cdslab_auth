### ----------------------------------------------- ###
# This file configures the email server and templates #
### ----------------------------------------------- ###

# ===================
# Template message
# Structure -> HTML message, it can contain the desired formating
#   Example: <center><br><b>This is a centered text</b></br></center>
# ===================
MESSAGE = "<center><br><b>This is your register link!!</b></br></center>"

# ===================
# Logo data
# IMG -> binary data, image type like *.jpg/jpeg, *.png
#   codified into the $LOGO format, which adds HTML formating to the
#   given IMG
#
# LOGO_PATH -> strig containing the name of the file inside the
#   assets folder
# ===================
LOGO = "<b>Welcome to CDSLAB!!</b><br><img src='cid:image1'<br>"
LOGO_PATH = "assets/images/cdslab_auth_logo.jpeg"

# ===================
# Email protocol configuration
# FROM_EMAIL -> Email to use as the notification sender
# PASSWORD -> password associated to $FROM_EMAIL
# SUBJECT -> Target email to receive the notification
# SERVER -> DNS server used to translate and send the data
# RESPONSE -> Response sent by the api after the email is sent
# ===================
FROM_EMAIL = "YOUR_EMAIL_ADRESS"
PASSWORD = "YOUR_EMAIL_PASSWORD"
SUBJECT = "THE_EMAIL_SUBJECT"
SERVER = "smtp.gmail.com:587"
RESPONSE = "RESPONSE_API_AFTER_SENT_EMAIL"
